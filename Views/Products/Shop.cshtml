@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .pagination li {
        margin-left: 5px;
    }

    .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color .3s;
    }

    .pagination .active {
        background-color: #e7ab3c;
        border: 1px solid black;
    }

        .pagination .active a {
            color: white;
        }


    .pagination a:hover:not(.active) {
        background-color: #e7ab3c;
        opacity: 0.6;
        color: white;
        border: 1px solid black;
    }
</style>

